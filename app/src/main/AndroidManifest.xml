<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.examplecalculator">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".Video_layout"
            android:screenOrientation="portrait"/>

        <activity android:name=".Music_layout"
            android:screenOrientation="portrait"/>

        <activity android:name=".Camera_layout"
            android:screenOrientation="portrait"/>

        <activity android:name=".Gallery_layout"
            android:screenOrientation="portrait"/>

        <activity android:name=".MainActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".Media_activity"
            android:screenOrientation="portrait"/>

        <activity android:name=".Calculation_activity"
            android:screenOrientation="portrait"/>

        <activity android:name=".Splash_Screen"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

    </application>

</manifest>